<?xml version="1.0" encoding="utf-8" ?>
<!-- Define application settings here. Run the T4 template afterwards to generate the binding code -->
<appsettings>
  <!-- All settings should have a prefix of where they primarily apply! -->

  <!-- Package Editor specific settings -->
  <setting name="PackageEditor_HideInterpreterHexBox" type="bool" defaultvalue="true"/>
  <setting name="PackageEditor_TouchComfyMode" type="bool" defaultvalue="false"/>
  <setting name="PackageEditor_ShowImpExpPrefix" type="bool" defaultvalue="true"/>
  <setting name="PackageEditor_ShowExportTypeIcons" type="bool" defaultvalue="true"/>
  <setting name="PackageEditor_ShowTreeEntrySubText" type="bool" defaultvalue="true"/>

  <!-- Sequence Editor specific settings -->
  <setting name="SequenceEditor_MaxVarStringLength" type="int" defaultvalue="40"/>
  <setting name="SequenceEditor_ShowParsedInfo" type="bool" defaultvalue="true"/>
    
  <!-- Soundplorer specific settings-->
  <setting name="Soundplorer_ReverseIDDisplayEndianness" type="bool" defaultvalue="false"/>
  <setting name="Soundplorer_AutoplayEntriesOnSelection" type="bool" defaultvalue="false"/>

  <!-- Meshplorer specific settings-->
  <setting name="Meshplorer_BackgroundColor" type="string" defaultvalue="#999999"/>
  <setting name="Meshplorer_ViewFirstPerson" type="bool" defaultvalue="false"/>
  <setting name="Meshplorer_ViewRotating" type="bool" defaultvalue="false"/>
  <setting name="Meshplorer_View_SolidEnabled" type="bool" defaultvalue="true"/>
  <setting name="Meshplorer_ViewWireframeEnabled" type="bool" defaultvalue="false"/>
    
  <!-- Pathfinding Editor specific settings-->
  <setting name="PathfindingEditor_ShowNodeSizes" type="bool" defaultvalue="false"/>
  <setting name="PathfindingEditor_ShowPathfindingNodesLayer" type="bool" defaultvalue="true"/>
  <setting name="PathfindingEditor_ShowActorsLayer" type="bool" defaultvalue="false"/>
  <setting name="PathfindingEditor_ShowArtLayer" type="bool" defaultvalue="false"/>
  <setting name="PathfindingEditor_ShowSplinesLayer" type="bool" defaultvalue="false"/>
  <setting name="PathfindingEditor_ShowEverythingElseLayer" type="bool" defaultvalue="false"/>


  <!-- AssetDB specific settings-->
  <setting name="AssetDB_DefaultGame" type="string" defaultvalue=""/>
  <setting name="AssetDBGame" type="string" defaultvalue="ME3"/>
  <setting name="AssetDBPath" type="string" defaultvalue=""/>

  <!-- Coalesced Editor specific settings -->
  <setting name="CoalescedEditor_SourcePath" type="string" defaultvalue=""/>
  <setting name="CoalescedEditor_DestinationPath" type="string" defaultvalue=""/>

  <!-- Export Loader Control settings -->
  <setting name="BinaryInterpreter_SkipAutoParseSizeCheck" type="bool" defaultvalue="false"/>
  <setting name="BinaryInterpreterWPFAutoScanAlways" type="bool" defaultvalue="false"/>
  <setting name="TextureViewer_AutoLoadMip" type="bool" defaultvalue="true"/>

  <setting name="Interpreter_LimitArrayPropertySize" type="bool" defaultvalue="true"/>
  <setting name="Interpreter_AdvancedDisplay" type="bool" defaultvalue="true"/>
  <setting name="Interpreter_Colorize" type="bool" defaultvalue="true"/>
  <setting name="Interpreter_ShowLinearColorWheel" type="bool" defaultvalue="false"/>
  
  <setting name="Soundpanel_LoopAudio" type="bool" defaultvalue="false"/>

  <!-- Global settings-->
  <setting name="Global_PropertyParsing_ParseUnknownArrayTypeAsObject" type="bool" defaultvalue="false"/>
  <setting name="Global_Analytics_Enabled" type="bool" defaultvalue="true"/>
  <setting name="Global_ME1Directory" type="string" defaultvalue=""/>
  <setting name="Global_ME2Directory" type="string" defaultvalue=""/>
  <setting name="Global_ME3Directory" type="string" defaultvalue=""/>
  <setting name="Global_LEDirectory" type="string" defaultvalue=""/>
  <setting name="Global_TLK_Language" type="string" defaultvalue=""/>
  <setting name="Global_TLK_IsMale" type="bool" defaultvalue="true"/>


</appsettings>
