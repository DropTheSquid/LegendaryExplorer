                                    <TextBlock FontWeight="Bold"><Run Text="{Binding Type}"/> <Run Text="{Binding PlotId}"/>:</TextBlock>
                                    <TextBlock Text="{Binding Path, Mode=OneWay}"/>
                                    <TextBlock>Plot Element ID: <Run Text="{Binding ElementId}"/></TextBlock>
